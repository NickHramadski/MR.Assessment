@using Newtonsoft.Json.Linq
@model JToken
@{
    ViewBag.Title = "Task 1";
    ViewBag.Description = "A full list of the ads, including all object data (AdId, Brand Id and Name, NumPages, and Position). NumPages refers to how many pages the ad takes up in a magazine (0.5 would be a half-page ad) and Position is a string that is either “Page” or “Cover,” describing where in the magazine the ad ran. This list should be sortable and paged. You may use client-side or server-side code to accomplish this. Default sort should be by brand name alphabetically.";
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            var data = @Html.Raw(Model);
            var grid = new GridProxy("#jqxgrid");
            grid.dataBind(data);
        });
    </script>
}